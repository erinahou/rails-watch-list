<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path('looney_tunes.png') %>)">
  <h1>Save any kind of movies</h1>
</div>


<div class="column">
  <!-- "My lists" subheading -->
  <div>
    <h1>My lists</h1>
    <%= link_to "Create a movie list", new_list_path, class: "btn btn-primary"%>
  </div>
  <!-- Lists -->
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-12 col-sm-6 col-md-4 mb-3">
        <%= link_to list_path(list), class:"text-decoration-none" do %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path('Belfast.webp') %>)">
            <%= list.name %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
